<!DOCTYPE html>
<html>
<br/>
<br/>
<br/>
<br/>
  <head>
    <title><%= t("app.appname")%></title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application'%>
  </head>

  <body>
    <div class="container">
    <%= yield %>

    <%= render 'layouts/footer' %>
    </div>
    <% if notice %>
      <script>
            $.notify("<%= notice %>", "success")
      </script>
      <% end %>

      <% if alert %>
        <script>
              $.notify("<%= alert %>", "error")
        </script>
        <% end %>
  </body>
</html>
